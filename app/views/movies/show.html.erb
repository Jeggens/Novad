<h1>
  <%= @movie.title %>
  <%= link_to "Delete", movie_path( @movie ), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default", style: "float: right" %>
  <!-- <%= link_to "Delete", movie_path( @movie ), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default", style: "float: right" %> -->
  <%= link_to "Edit", edit_movie_path( @movie ), class: "btn btn-default", style: "float: right" %>
 </h1>

 <!-- ... -->

<h3><%= link_to @movie.actor.name, @movie.actor %> </h3>

<p><%= @movie.year %></p>
<p><%= @movie.plot %></p>

<p>
   <% @movie.genres.each do |genre| %>
       <%= link_to "#{genre.name}", genre, class: "btn btn-primary btn-xs" %>
   <% end %>
</p>

<img class="cover" src="<%= @movie.cover %>"/>
