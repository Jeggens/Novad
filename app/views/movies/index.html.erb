<h1>Movies</h1>

<%= form_tag(movies_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Movies" %>
<%= submit_tag "Search" %>
<% end %>

<% if @movies.present? %>
  <%= render @movies %>
<% else %>
  <p>There are no movie titles containing the term(s) <%= params[:search] %>.</p>
<% end %>

