<%= form_for @actor do |f| %>

    <div class="form-group">
       <%= f.label :name %>
       <%= f.text_field :name, class: "form-control", placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :age %>
       <%= f.text_field :age, class: "form-control", placeholder: ". . ."   %>
    </div>

    <div class="form-group">
       <%= f.label :country %>
       <%= f.text_field :country, class: "form-control", placeholder: ". . ."   %>
    </div>

    <div class="form-group">
       <%= f.label :bio %>
       <%= f.text_area :bio, class: "form-control", rows: 10, placeholder: ". . ."  %>
    </div>

    <%= f.submit (@actor.new_record? ? "Create" : "Update"), class: "form-control btn-primary" %>

<% end %>
